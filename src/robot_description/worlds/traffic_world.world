<?xml version="1.0"?>
<sdf version="1.6">
  <world name="minimal_traffic_world">
    
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <include>
      <uri>model://sun</uri>
    </include>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- MAIN ROAD -->
    <model name="main_road">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>100 8 0.1</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>100 8 0.1</size>
            </box>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
            <diffuse>0.4 0.4 0.4 1</diffuse>
          </material>
        </visual>
      </link>
      <pose>0 0 0 0 0 0</pose>
    </model>

    <!-- TRAFFIC LIGHT 1 - GREEN at 8m, right edge -->
    <model name="traffic_light_green">
      <static>true</static>
      <link name="pole">
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.05</radius>
              <length>2.5</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
            <diffuse>0.4 0.4 0.4 1</diffuse>
          </material>
        </visual>
      </link>
      
      <link name="housing">
        <visual name="visual">
          <geometry>
            <box>
              <size>0.3 0.2 0.8</size>
            </box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
        <pose>0 0 2.8 0 0 0</pose>
      </link>

      <link name="red_light">
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>0.12</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.2 0 0 1</ambient>
            <diffuse>0.3 0 0 1</diffuse>
          </material>
        </visual>
        <pose>0.15 0 3.0 0 0 0</pose>
      </link>

      <link name="yellow_light">
