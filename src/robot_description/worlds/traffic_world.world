            <sphere>
              <radius>0.12</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0 1 0 1</ambient>
            <diffuse>0 1 0 1</diffuse>
            <emissive>0 0.9 0 1</emissive>
          </material>
        </visual>
        <pose>0.15 0 2.6 0 0 0</pose>
      </link>

      <pose>8 4.5 0 0 0 0</pose>
